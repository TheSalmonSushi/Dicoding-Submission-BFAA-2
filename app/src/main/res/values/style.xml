<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomBottomNavigation" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemIconSize">24dp</item> <!-- Adjust icon size -->
        <item name="itemTextAppearanceActive">@style/CustomTextAppearance</item>
        <item name="itemTextAppearanceInactive">@style/CustomTextAppearance</item>
    </style>

    <style name="CustomTextAppearance" parent="TextAppearance.AppCompat.Caption">
        <item name="android:lineSpacingExtra">4dp</item> <!-- Adjust spacing between icon and text -->
        <item name="android:textSize">12sp</item> <!-- Adjust text size -->
    </style>

    <style name="CustomAppBarStyle" parent="Widget.Material3.AppBarLayout">
        <item name="android:elevation">4dp</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:minHeight">56dp</item>
    </style>
</resources>